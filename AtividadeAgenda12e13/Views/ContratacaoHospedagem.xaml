<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtividadeAgenda12e13.Views.ContratacaoHospedagem"
            NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource BackGround}">
    <VerticalStackLayout 
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="40"
       >

        <Label 
            Text="Cálculo da Diária"
            FontFamily="UrbanistBold"
            FontSize="45"
            TextColor="{StaticResource Color1}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            />

        <Frame
            Padding="10">
            <VerticalStackLayout>
                <Grid
                    RowDefinitions="Auto, Auto"
                    ColumnDefinitions="*, *, 2*">

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Adultos:"/>

                    <Label
                           Grid.Row="0"
                           Grid.Column="1"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"
                           />

                    <Stepper
                        x:Name="stp_adultos"
                        Grid.Row="0"
                        Grid.Column="2"
                        Minimum="0"
                        Maximum="10"
                        Increment="1"
                        />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="Crianças:"/>

                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{Binding Value}"
                        BindingContext="{x:Reference stp_criancas}"
                        />

                    <Stepper
                        x:Name="stp_criancas"
                        Grid.Row="1"
                        Grid.Column="2"
                        Minimum="0"
                        Maximum="10"
                        Increment="1"
                        />
                </Grid>
                <Label
                    Text="Escolha sua suíte"/>
                <Picker
                    x:Name="pck_suite"
                    Title="Selecione sua Acomodação"
                    ItemDisplayBinding="{Binding Descricao}"
                    />
                <Frame
                    Padding="10"
                    Margin="0, 10, 0, 10">
                    <VerticalStackLayout>
                        <Label
                            Text="Periodo de Estadia"/>
                        <HorizontalStackLayout>
                            <Label
                                Text="Check-in"
                                WidthRequest="100"
                                VerticalTextAlignment="Center"/>
                            <DatePicker
                                x:Name="dtp_checkin"
                                Format="dd/MM/yyyy"
                                DateSelected="Dtp_checkin_DateSelected"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label
                               Text="Check-out"
                                WidthRequest="100"
                               VerticalTextAlignment="Center"/>
                            <DatePicker
                               x:Name="dtp_checkout"
                               Format="dd/MM/yyyy"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <Button
                    Text="Avançar"
                    Clicked="OpenContractedHosting"/>


            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>